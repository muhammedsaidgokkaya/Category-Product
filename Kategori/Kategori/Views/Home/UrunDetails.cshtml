@{
    ViewData["Title"] = "UrunDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <img class="card-img-top" src="~/Image/@Model.ImgName" alt="Card image cap">
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <h6 class="card-text">@Model.Price TL</h6>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>