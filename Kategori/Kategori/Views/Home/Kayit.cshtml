
@{
    ViewData["Title"] = "Kayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Kayıt Ol</h3>

<form method="post">
    <div class="form-group">
        <label>İsim</label>
        <input type="text" class="form-control" name="AdminUserName" />
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input type="email" class="form-control" name="AdminUserMail" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" class="form-control" name="AdminUserPassword" />
    </div>
    <button type="submit" class="btn btn-primary" value="kaydet">Kaydet</button>
</form>