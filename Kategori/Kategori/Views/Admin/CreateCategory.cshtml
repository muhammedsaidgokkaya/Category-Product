
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h3>Kategori Kayıt</h3>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Kategori Numarası</label>
            <input type="text" class="form-control" name="CategoryId" />
        </div>
        <div class="form-group">
            <label>Kategori İsmi</label>
            <input type="text" class="form-control" name="CategoryName" />
        </div>
        <div class="form-group">
            <label>Kategori Açıklaması</label>
            <input type="text" class="form-control" name="CategoryDescription" />
        </div>
        <div class="form-group">
            <label>Kategori Durumu</label>
            <input type="text" class="form-control" name="CategoryStatus" />
        </div>
        <button type="submit" class="btn btn-primary" value="kaydet">Kaydet</button>
    </form>
</div>