@using Kategori.Models
@model List<Urunler>

@{
    ViewData["Title"] = "IndexUrun";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h3>Ürün Listesi</h3>

<a class="btn btn-primary" href="/Admin/CreateUrun" role="button">Kayıt</a>

<div class="wrapper style1 first">
    <article class="container" id="top">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Ürün İsmi</th>
                        <th scope="col">Ürün Açıklaması</th>
                        <th scope="col">Ürün Fiyatı</th>
                        <th scope="col">Ürün Resmi</th>
                        <th scope="col">Ürün Kategori Numarası</th>
                        <th scope="col">Düzenle</th>
                        <th scope="col">Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <th scope="row">#</th>
                            <td>@x.Id</td>
                            <td>@x.Name</td>
                            <td>@x.Description</td>
                            <td>@x.Price</td>
                            <td>@x.ImgName</td>
                            <td>@x.CategoryId</td>

                            <td>
                                <a class="btn btn-primary" href="/Admin/UpdateUrun/@x.Id" role="button">Düzenle</a>
                            </td>
                            <td>
                                <a class="btn btn-primary" href="/Admin/DeleteUrun/@x.Id" role="button">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </article>
</div>
